doctype html

include mixins

html
  head
    block title
      title Ti.Forward
    meta(charset="utf-8")
    link(rel="stylesheet",href="/build/main.css")
    link(rel="stylesheet",href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
    include favicons
  body

    .navbar.navbar-main.navbar-default.navbar-static-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target="#navigation")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Ti.Forward

        #navigation.collapse.navbar-collapse
          block navigation
            +navigation()

    block body

    .section
      include calls_to_action

    .section.last
      p Be humble »
      p.small Titanium™, Appcelerator®, and Hyperloop™ are registered trademarks of Appcelerator inc.
      p.small Ti.Forward and the community members assisting in this effort are in no way affiliated with Appcelerator inc.

    script(src="/build/bundle.js")
